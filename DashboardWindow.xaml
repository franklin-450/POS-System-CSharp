<Window x:Class="SmartPOS.UI.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartPOS Admin Dashboard"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6FB">

    <DockPanel>

        <!-- Top Navigation -->
        <Border DockPanel.Dock="Top" Height="70" Background="#0D47A1">
            <DockPanel>
                <TextBlock Text="SmartPOS Admin" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="20,0"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,20,0">
                    <TextBlock Text="Logged in as: " 
                               Foreground="White" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="AdminNameText" 
                               Foreground="#FFEB3B" 
                               FontSize="16" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Side Menu -->
        <StackPanel DockPanel.Dock="Left" 
                    Width="200" 
                    Background="#1976D2">

            <Button Content="ðŸ  Home" 
                    Margin="10" Padding="10"
                    Click="GoHome_Click"/>

            <Button Content="ðŸ“¦ Products"
                    Margin="10" Padding="10"
                    Click="OpenProducts_Click"/>

            <Button Content="ðŸ“Š Sales Reports" Margin="10" Padding="10"/>

            <Button Margin="10" Padding="10" Click="OpenCashierWindow_Click">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <Image Source="pack://siteoforigin:,,,/Icons/user.png"
               Width="20"
               Height="20"
               Margin="0,0,8,0"/>
        <TextBlock Text="Users" VerticalAlignment="Center"/>
    </StackPanel>
</Button>

