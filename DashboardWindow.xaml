            <Button Content="ðŸšª Logout" 
                    Margin="10" Padding="10"
                    Click="BtnLogout_Click"
                    Background="#D32F2F"
                    Foreground="White"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Background="#F3F6FB">
            <StackPanel Margin="20">
                <TextBlock Text="Welcome to Admin Dashboard" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#0D47A1"/>

                <WrapPanel Margin="0,20,0,0">

                    <Border Background="White" Width="200" Height="120"
                            CornerRadius="10" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Total Sales" FontWeight="Bold"/>
                            <TextBlock Text="Ksh 120,000" FontSize="20"
                                       FontWeight="Bold" Foreground="#43A047"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" Width="200" Height="120"
                            CornerRadius="10" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Active Cashiers" FontWeight="Bold"/>
                            <TextBlock Text="5" FontSize="20"
                                       FontWeight="Bold" Foreground="#FB8C00"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" Width="200" Height="120"
                            CornerRadius="10" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Products in Stock" FontWeight="Bold"/>
                            <TextBlock Text="320" FontSize="20"
                                       FontWeight="Bold" Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>

                </WrapPanel>
            </StackPanel>
        </Grid>

    </DockPanel>
</Window>
