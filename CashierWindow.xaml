<Window x:Class="SmartPOS.UI.CashierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Cashiers"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6FB">

    <Grid Margin="20">

        <StackPanel>

            <TextBlock Text="Cashier Management"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#0D47A1"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <Border Background="White" CornerRadius="10" Padding="15">
                <StackPanel>

                    <TextBlock Text="Full Name" FontWeight="SemiBold"/>
                    <TextBox x:Name="NameBox" Height="30" Margin="0,5"/>

                    <TextBlock Text="Username" FontWeight="SemiBold"/>
                    <TextBox x:Name="UsernameBox" Height="30" Margin="0,5"/>

                    <TextBlock Text="Password (auto-generated)" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,5" IsEnabled="False"/>

                    <Button Content="Add Cashier"
                            Margin="0,15,0,0"
                            Height="40"
                            Background="#1976D2"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="BtnAddCashier_Click"/>

                    <!-- Notification Text -->
                    <TextBlock x:Name="NotificationText"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Opacity="0"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Cashier List -->
            <TextBlock Text="Registered Cashiers:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,20,0,10"/>

            <ListView x:Name="CashierList" Height="200" Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="180" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Username" Width="120" DisplayMemberBinding="{Binding Username}"/>
                        <GridViewColumn Header="Password" Width="120" DisplayMemberBinding="{Binding Password}"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
    </Grid>
</Window>
