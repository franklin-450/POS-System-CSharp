<Window x:Class="SmartPOS.UI.ProductEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add / Edit Product"
        Height="700" Width="900"
        Background="#E3F2FD"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#000000" Opacity="0.15" BlurRadius="12" ShadowDepth="3"/>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Scrollable wrapper -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Border CornerRadius="16" Background="White" Padding="24" Effect="{StaticResource DropShadowEffect}">
                <Grid>
 <Grid.ColumnDefinitions>
    <ColumnDefinition Width="3*"/>   <!-- Left: product details -->
    <ColumnDefinition Width="2*"/>   <!-- Right: image preview -->
</Grid.ColumnDefinitions>
                   

<!-- Left Column: Product Details -->
<StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
    <TextBlock Text="Add New Product" FontSize="30" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,12"/>
    <TextBlock Text="Fill in the product details below. Use barcode scanner or manual entry." Foreground="#555" TextWrapping="Wrap" Margin="0,0,0,20"/>

    <!-- Product Name -->
    <StackPanel Orientation="Vertical" Margin="0,0,0,12">
        <TextBlock Text="Product Name" FontSize="14" FontWeight="SemiBold"/>
        <TextBox x:Name="txtName" Height="44" FontSize="16" Padding="10" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD"/>
    </StackPanel>

 <!-- Barcode & VAT row -->
<StackPanel Orientation="Horizontal" Margin="0,0,0,12">
    <StackPanel Width="230" Margin="0,0,16,0">
        <TextBlock Text="Barcode" FontSize="14" FontWeight="SemiBold"/>
        <TextBox x:Name="txtBarcode" Height="44" FontSize="16" Padding="10" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD"/>
    </StackPanel>
    <StackPanel Width="160">
        <TextBlock Text="VAT (%)" FontSize="14" FontWeight="SemiBold"/>
        <TextBox x:Name="txtVAT" Height="44" FontSize="16" Padding="10" Text="16" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD"/>
    </StackPanel>
</StackPanel>

<!-- Price row (new line) -->
<StackPanel Orientation="Horizontal" Margin="0,0,0,12">
    <StackPanel Width="200">
        <TextBlock Text="Price (Ksh)" FontSize="14" FontWeight="SemiBold"/>
        <TextBox x:Name="txtPrice" Height="44" FontSize="16" Padding="10" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD"/>
    </StackPanel>
</StackPanel>


    <!-- Category and Stock -->
    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
        <StackPanel Width="200" Margin="0,0,16,0">
            <TextBlock Text="Category" FontSize="14" FontWeight="SemiBold"/>
            <ComboBox x:Name="cmbCategory" Height="44" FontSize="16" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD">
                <ComboBoxItem Content="Electronics"/>
                <ComboBoxItem Content="Groceries"/>
                <ComboBoxItem Content="Clothing"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Width="160" Margin="0,0,16,0">
            <TextBlock Text="Stock Quantity" FontSize="14" FontWeight="SemiBold"/>
            <TextBox x:Name="txtStock" Height="44" FontSize="16" Padding="10" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD" Text="0"/>
        </StackPanel>
        <StackPanel Width="200" Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox x:Name="chkFeatured" Content="Featured Product" Foreground="#1E88E5" FontWeight="SemiBold"/>
        </StackPanel>
    </StackPanel>

    <!-- Description -->
    <StackPanel Margin="0,0,0,12">
        <TextBlock Text="Description (optional)" FontSize="14" FontWeight="SemiBold"/>
        <TextBox x:Name="txtDescription" Height="110" TextWrapping="Wrap" AcceptsReturn="True" Padding="10" BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
        <Button x:Name="btnSave" Content="Save &amp; Broadcast" Width="160" Background="#1E88E5" Style="{StaticResource RoundedButton}" Click="btnSave_Click" Margin="0,0,12,0"/>
        <Button x:Name="btnCancel" Content="Cancel" Width="120" Background="#B0BEC5" Style="{StaticResource RoundedButton}" Click="btnCancel_Click"/>
    </StackPanel>
</StackPanel>

                    <!-- Right Column: Image Preview -->
                    <StackPanel Grid.Column="1" Margin="12" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <TextBlock Text="Product Image" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Border Width="280" Height="280" CornerRadius="12" Background="#FFF9C4" BorderBrush="#FFEB3B" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Image x:Name="imgPreview" Stretch="Uniform"/>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14">
    <Button x:Name="btnBrowse" Content="Upload Image" Width="140" Background="#43A047"
            Style="{StaticResource RoundedButton}" Click="btnBrowse_Click" Margin="0,0,6,0"/>
    <Button x:Name="btnClearImage" Content="Clear" Width="100" Background="#E53935"
            Style="{StaticResource RoundedButton}" Click="btnClearImage_Click"/>
</StackPanel>

                        <Separator Margin="0,18"/>

                        <TextBlock Text="Smart Options" FontWeight="Bold" Foreground="#1565C0" Margin="0,6"/>
                        <StackPanel Margin="0,6">
                            <TextBlock Text="• Image will be copied into local Images folder for distribution." Foreground="#444" TextWrapping="Wrap" Margin="0,4"/>
                            <TextBlock Text="• Product will be broadcast automatically to other POS on the network." Foreground="#444" TextWrapping="Wrap" Margin="0,4"/>
                            <TextBlock Text="• Ensure firewall allows UDP port 50000 on local network." Foreground="#D32F2F" TextWrapping="Wrap" Margin="0,8"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
