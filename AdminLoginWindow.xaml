<Window x:Class="SmartPOS.UI.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartPOS Admin Login"
        Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#E8F1FF"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- Modern Primary Button -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1155CC" Offset="0"/>
                        <GradientStop Color="#4FA8FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input TextBox and PasswordBox Style -->
        <Style TargetType="TextBox" x:Key="InputBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>

        <Style TargetType="PasswordBox" x:Key="InputPassword">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Border Width="360" Height="430"
                Background="White"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="25">

            <!-- Modern High-Definition Shadow -->
            <Border.Effect>
                <DropShadowEffect Color="#000000"
                                  BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.28"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">

                <!-- Logo -->
                <Image Source="pack://siteoforigin:,,,/Icons/admin_shield.png" Height="90" Width="90" HorizontalAlignment="Center"/>

                <TextBlock Text="Admin Login"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#0A3D91"
                           HorizontalAlignment="Center"
                           Margin="0,12"/>

                <!-- Username -->
                <TextBlock Text="Username" FontWeight="SemiBold" Margin="2,12,0,2"/>
                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource InputBox}"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="2,12,0,2"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource InputPassword}"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnLogin_Click"/>

                <!-- Error text -->
                <TextBlock x:Name="ErrorText"
                           Foreground="Red"
                           FontSize="13"
                           TextAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
